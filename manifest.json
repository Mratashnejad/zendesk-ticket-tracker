{
    "manifest_version": 3,
    "name": "Zendesk Ticket Tracker",
    "description": "Tracks specific Zendesk ticket information and copies to clipboard.",
    "version": "1.0",
    "permissions": ["activeTab", "clipboardWrite"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.zendesk.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  